<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] EstacionamentoSistema</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EstacionamentoMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="py-3" style="background:#232946; border-bottom:2px solid #eebbc3;">
        <div class="container d-flex flex-column flex-md-row align-items-center justify-content-between">
            <h1 class="mb-0 fw-bold" style="color:#eebbc3; font-size:2rem;">Sistema de Estacionamento</h1>
            <nav>
                <a href="/Veiculos" class="me-3 text-decoration-none" style="color:#b8c1ec;">Início</a>
                <a href="/Veiculos/Criar" class="text-decoration-none" style="color:#b8c1ec;">Registrar Entrada</a>
            </nav>
        </div>
    </header>

    <main role="main" class="flex-grow-1 pb-3">
        <div class="container mt-4">
            @if (TempData["MensagemSucesso"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["MensagemSucesso"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["MensagemErro"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["MensagemErro"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </div>
    </main>

    <!-- Se quiser manter o footer, use a versão discreta abaixo ou remova completamente -->
    <footer class="text-center py-2 site-footer" style="background:#232946; color:#b8c1ec; font-size:0.95rem; border-top:1px solid #393e6c;">
        <div>
            &copy; 2025 - EstacionamentoMVC
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>