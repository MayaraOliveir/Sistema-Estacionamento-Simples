@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model EstacionamentoMVC.Models.Veiculo

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow" style="background:#232946; color:#fff; border-radius:16px;">
                <div class="card-header" style="background:#121629; color:#eebbc3; border-radius:16px 16px 0 0;">
                    <h2 class="mb-0">Editar Veículo</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Editar" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3">
                            <label asp-for="Placa" class="form-label">Placa do Veículo</label>
                            <input asp-for="Placa" class="form-control" maxlength="7" />
                            <span asp-validation-for="Placa" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="HoraEntrada" class="form-label">Hora de Entrada</label>
                            <input asp-for="HoraEntrada" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label asp-for="HoraSaida" class="form-label">Hora de Saída</label>
                            <input asp-for="HoraSaida" class="form-control" readonly />
                        </div>
                        <button type="submit" class="btn botao-acao w-100">
                            <i class="bi bi-save"></i> Salvar Alterações
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</div>
